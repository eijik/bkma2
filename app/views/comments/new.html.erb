<h1>New comment</h1>

<%= error_messages_for :comment %>

<% form_for(@comment) do |f| %>
  <p>
    <b>User</b><br />
    <%= f.text_field :user_id %>
  </p>

  <p>
    <b>Comment</b><br />
    <%= f.text_area :comment %>
  </p>

  <p>
    <b>Tag flg</b><br />
    <%= f.text_field :tag_flg %>
  </p>

  <p>
    <b>Create at</b><br />
    <%= f.datetime_select :created_at %>
  </p>

  <p>
    <b>Update at</b><br />
    <%= f.datetime_select :updated_at %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', comments_path %>
